doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title || 'Space Crafters'
    link(rel='stylesheet', href='/bootstrap-5.3.1-dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  
  body
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-dark.bg-info
      .container-fluid
        a.navbar-brand(href='/') Space Crafters
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/') Home
            li.nav-item
              a.nav-link(href='/projects') Projects
            li.nav-item
              a.nav-link(href='/reviews') Reviews
            li.nav-item
              a.nav-link(href='/about') About
            li.nav-item
              a.nav-link(href='/contact') Contact
            li.nav-item
              a.nav-link(href='/maintenance-tips') Tips
            if user
              li.nav-item
                span.nav-link.text-white Welcome, #{user.username}!
              li.nav-item
                a.nav-link.btn.btn-outline-light(href='/logout') Logout
            else
              li.nav-item
                a.nav-link.btn.btn-outline-light.me-2(href='/login') Login
              


    // Main Content
    block content

    // Footer
    footer.bg-dark.text-white.py-4.mt-5
      .container
        .row
          .col-md-4.mb-3
            h5 Space Crafters
            p Premium interior design solutions for modern living spaces.
          
          .col-md-4.mb-3
            h5 Quick Links
            ul.list-unstyled
              li
                a.text-white.text-decoration-none(href='/projects') Projects
              li
                a.text-white.text-decoration-none(href='/reviews') Reviews
              li
                a.text-white.text-decoration-none(href='/about') About Us
              li
                a.text-white.text-decoration-none(href='/contact') Contact
          
          .col-md-4.mb-3
            h5 Contact Info
            p.mb-2
              i.bi.bi-envelope.me-2
              | info@spacecrafters.com
            p.mb-0
              i.bi.bi-phone.me-2
              | +1 (555) 123-4567

        hr.bg-white.my-3
        .text-center
          p.mb-0 &copy; 2025 Space Crafters. All rights reserved.

script(src='/bootstrap-5.3.1-dist/js/bootstrap.bundle.min.js')
script(src='/javascripts/main.js')
