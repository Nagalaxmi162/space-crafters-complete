extends layout

block content
  .contact-page
    .container.py-4
      .row.justify-content-center
        .col-lg-8.col-md-10
          h1.text-center.mb-3 Get In Touch
          p.text-center.text-muted.mb-4 We'd love to hear about your project or idea.

          .card.shadow-lg.border-0
            .card-body.p-4
              form(action='/contact', method='POST')
                .mb-3
                  label.form-label(for='name') Name
                  input.form-control(type='text', id='name', name='name', required)

                .mb-3
                  label.form-label(for='email') Email
                  input.form-control(type='email', id='email', name='email', required)

                .mb-3
                  label.form-label(for='phone') Phone
                  input.form-control(type='tel', id='phone', name='phone')

                .mb-3
                  label.form-label(for='message') Message
                  textarea.form-control(id='message', name='message', rows='5', required)

                .text-center
                  button.btn.btn-primary.btn-lg(type='submit') Send Message

  style.
    .contact-page {
      min-height: 85vh;
      background-image: linear-gradient(rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.3)), url('/images/hero-interior.jpg');
      background-size: cover;
      background-position: center ;
      background-attachment: fixed ;
      padding: 100px 0;
    }
    .contact-page h1 {
      font-weight: 700;
      color: #2c3e50;
    }
    .contact-page .card {
      background-color: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
    }
    .contact-page .form-label {
      font-weight: 600;
      color: #495057;
    }
    .contact-page .btn-primary {
      padding: 12px 40px;
      font-weight: 600;
    }

