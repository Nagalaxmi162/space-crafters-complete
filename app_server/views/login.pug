doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Login - Space Crafters
    link(rel='stylesheet', href='/bootstrap-5.3.1-dist/css/bootstrap.min.css')
  
  body.bg-light
    .container
      .row.justify-content-center.align-items-center(style='min-height: 100vh;')
        .col-md-5
          .card.shadow-lg.border-0
            .card-header.bg-info.text-white.text-center.py-4
              h2.mb-0 Space Crafters
              p.mb-0 Welcome Back!
            
            .card-body.p-5
              if error
                .alert.alert-danger.text-center= error
              
              form(action='/login', method='POST')
                .mb-3
                  label.form-label(for='email') Email
                  input.form-control.form-control-lg#email(type='email', name='email', required, placeholder='your.email@example.com')
                
                .mb-4
                  label.form-label(for='password') Password
                  input.form-control.form-control-lg#password(type='password', name='password', required, placeholder='Your password')
                
                button.btn.btn-info.btn-lg.w-100.mb-3(type='submit') Login
                
                .text-center
                  p.mb-0.text-muted Forgot password?
                  p New user?
                    a.text-info(href='/register') Sign Up


