extends layout

block content
  .container.py-5
    .row.justify-content-center
      .col-md-6
        .card.shadow
          .card-body.p-5
            h2.text-center.mb-4 Login to Space Crafters
            
            if error
              .alert.alert-danger= error
              
            form(method='post', action='/login')
              .mb-3
                label.form-label(for='email') Email Address
                input.form-control(type='email', id='email', name='email', required, value=formData ? formData.email : '')
                
              .mb-3
                label.form-label(for='password') Password
                input.form-control(type='password', id='password', name='password', required)
                
              .d-grid
                button.btn.btn-primary.btn-lg(type='submit') Login
                
            .text-center.mt-3
              p Don't have an account? 
                a(href='/register') Register here