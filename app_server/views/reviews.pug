extends layout

block content
  .container.py-5
    h1.text-center.mb-5 Customer Reviews
    
    if reviews && reviews.length > 0
      .row
        each review in reviews
          .col-md-6.mb-4
            .card.shadow-sm
              .card-body
                h5.card-title= review.name
                p.text-warning
                  = '‚≠ê'.repeat(review.rating)
                p.card-text= review.reviewText
                if review.projectType
                  p.small.text-muted Project: #{review.projectType}
    else
      .text-center.py-5
        h3 No reviews yet
        p Be the first to review!
        a.btn.btn-primary(href='/reviews/new') Write Review
    
    .text-center.mt-4
      a.btn.btn-primary(href='/reviews/new') Write a Review
