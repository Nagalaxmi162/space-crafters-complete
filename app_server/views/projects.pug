extends layout

block content
  .container.py-5
    h1.text-center.mb-4 My Image Album
    p.text-center.text-muted.mb-5 Browse the gallery of interior images (no database needed)

    -
      var albumImages = [
        "projects/balcony1.jpg",
        "projects/balcony2.jpg",
        "projects/balcony3.jpg",
        "projects/bedroom2.jpg",
        "projects/bedroom3.jpg",
        "projects/bedroom4.jpg",
        "projects/bedroom5.jpg",
        "projects/dining-room1.jpg",
        "projects/dining-room2.jpg",
        "projects/dining-room3.jpg",
        "projects/dining-room4.jpg",
        "projects/kitchen1.jpg",
        "projects/kitchen2.jpg",
        "projects/kitchen3.jpg",
        "projects/kitchen4.jpg",
        "projects/kitchen5.jpg",
        "projects/living-room1.jpg",
        "projects/living-room2.jpg",
        "projects/living-room3.jpg",
        "projects/living-room4.jpg",
        "projects/living-room5.jpg",
        "projects/office1.jpg",
        "projects/office2.jpg",
        "projects/office3.jpg",
        "projects/office4.jpg"
      ]

    .row
      each img in albumImages
        .col-lg-4.col-md-6.mb-4
          .card.shadow-sm
            img.card-img-top(
              src='/images/' + img,
              alt=img,
              style='height: 250px; object-fit: cover; cursor: pointer;',
              onclick='openModal("/images/' + img + '")'
            )
            
  //- Modal for full-size image view
  #imageModal.modal(tabindex='-1', role='dialog', style='display:none;')
    .modal-dialog.modal-dialog-centered.modal-lg(role='document')
      .modal-content
        .modal-header
          h5.modal-title Image Preview
          button.close(type='button', onclick='closeModal()', aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body.text-center
          img#modalImage.img-fluid(src='', alt='Full size image', style='max-height: 80vh;')
        .modal-footer
          button.btn.btn-secondary(type='button', onclick='closeModal()') Close

  style.
    .card {
      transition: transform 0.3s ease;
    }
    .card:hover {
      transform: translateY(-5px);
    }
    .modal {
      background-color: rgba(0, 0, 0, 0.8);
    }
    .modal-content {
      background-color: #fff;
    }

  script.
    function openModal(imageSrc) {
      document.getElementById('modalImage').src = imageSrc;
      document.getElementById('imageModal').style.display = 'block';
    }
    function closeModal() {
      document.getElementById('imageModal').style.display = 'none';
    }
    // Close modal when clicking outside the image
    window.onclick = function(event) {
      var modal = document.getElementById('imageModal');
      if (event.target == modal) {
        closeModal();
      }
    }



